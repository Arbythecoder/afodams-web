# Production Environment Variables for Railway

# Database
MONGO_URI=mongodb+srv://your_user:your_password@cluster.mongodb.net/afodams-properties?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_characters

# Server
NODE_ENV=production
PORT=5000
CORS_ORIGIN=https://arbythecoder.github.io

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Paystack
PAYSTACK_SECRET_KEY=your_paystack_secret
PAYSTACK_PUBLIC_KEY=your_paystack_public

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
